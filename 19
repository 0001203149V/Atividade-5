programa {
  inclua biblioteca Util

  funcao inicio() {
    
    inteiro numero_secreto = 0
    inteiro palpite = 0
    inteiro tentativas = 0
    const inteiro LIMITE_TENTATIVAS = 10
    const inteiro NUMERO_MAXIMO = 100


    numero_secreto = Util.sorteia(1, NUMERO_MAXIMO)

    escreva("--- JOGO DE ADIVINHA√á√ÉO ---\n")
    escreva("Tente adivinhar o n√∫mero secreto entre 1 e ", NUMERO_MAXIMO, ".\n")
    escreva("Voc√™ tem ", LIMITE_TENTATIVAS, " tentativas.\n\n")

   
    enquanto (palpite != numero_secreto e tentativas < LIMITE_TENTATIVAS)
    {
      tentativas = tentativas + 1

      escreva("Tentativa ", tentativas, " de ", LIMITE_TENTATIVAS, ": Digite seu palpite: ")
      leia(palpite)



      se (palpite == numero_secreto)
      {
        escreva("\nüèÜ PARAB√âNS! Voc√™ acertou o n√∫mero secreto (", numero_secreto, ") em ", tentativas, " tentativas!\n")
      }
      senao 
      {
        se (palpite > numero_secreto)
        {
          escreva("Dica: O n√∫mero secreto √© MENOR que ", palpite, ".\n")
        }
        senao
        {
          escreva("Dica: O n√∫mero secreto √© MAIOR que ", palpite, ".\n")
        }
      }
    }

    se (palpite != numero_secreto)
    {
      escreva("\n\nGAME OVER! Suas ", LIMITE_TENTATIVAS, " tentativas acabaram.\n")
      escreva("O n√∫mero secreto era: ", numero_secreto, ".\n")
    }
    escreva("\nFim do Jogo.\n")
  }
}
