programa {
  funcao inicio() {
    real base, resultado
    inteiro expoente, i
    escreva("Digite a base: ")
    leia(base)
    escreva("Digite o expoente (inteiro e positivo): ")
    leia(expoente)
    resultado = 1
    para (i = 1; i <= expoente; i++)
    {
      resultado = resultado * base
    }
    escreva("\nO resultado de ", base, " elevado a ", expoente, " Ã©: ", resultado)
  }
}
