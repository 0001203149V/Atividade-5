programa {
  funcao inicio() {
    inteiro numero, i
    inteiro fatorial
    escreva("Digite um número inteiro positivo: ")
    leia(numero)
    se (numero < 0)
    {
  escreva("Não existe fatorial de número negativo!")
    }
    senao
    {
      fatorial = 1
      para (i = 1; i <= numero; i++)
    {
      fatorial = fatorial * i
    }
    escreva("\nO fatorial de ", numero, " é: ", fatorial)
  }
  }
}
